<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="220dp"
    android:layout_height="220dp"
    android:layout_marginRight="7dp"
    android:clickable="true"
    android:focusable="true"
    app:layout_goneMarginRight="6dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="3dp"
        app:cardBackgroundColor="@color/blanc"
        app:cardCornerRadius="5dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/nouveaute_image"
                android:layout_width="0dp"
                android:layout_height="105dp"
                android:scaleType="centerCrop"
                android:src="@drawable/t_shirt"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/nouveaux_description_du_produit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:text="Desciption du produits"
                android:textColor="@color/black"
                app:fontFamily="sans-serif-condensed"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.11"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/nouveaute_image" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/nouveaux_image_profile"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp"
                android:src="@drawable/use"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/nouveaux_description_du_produit"
                app:layout_constraintVertical_bias="0.864" />

            <TextView
                android:id="@+id/user_id_nvx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="88dp"
                android:layout_marginRight="88dp"
                android:text="user_name"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:fontFamily="sans-serif-condensed"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/nouveaux_image_profile"
                app:layout_constraintTop_toBottomOf="@+id/nouveaux_description_du_produit" />

            <TextView
                android:id="@+id/nouveaux_temps "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:text="Fev 17,12:00"
                app:fontFamily="sans-serif-condensed"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/nouveaux_image_profile"
                app:layout_constraintTop_toBottomOf="@+id/user_id_nvx" />

            <ImageView
                android:id="@+id/like_image"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="4dp"
                app:layout_constraintBottom_toBottomOf="@+id/nouveaux_nombre_de_like"
                app:layout_constraintEnd_toStartOf="@+id/textView15"
                app:layout_constraintStart_toStartOf="@+id/textView13"
                app:layout_constraintTop_toTopOf="@+id/nouveaux_nombre_de_like"
                app:layout_constraintVertical_bias="0.75"
                app:srcCompat="@drawable/ic_like" />

            <TextView
                android:id="@+id/nouveaux_nombre_de_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="64dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:text="1k"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:fontFamily="sans-serif-condensed"
                app:layout_constraintBottom_toTopOf="@+id/nouveaux_prix"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.666"
                app:layout_constraintStart_toEndOf="@+id/like_image"
                app:layout_constraintTop_toBottomOf="@+id/nouveaute_image" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="10dp"
                android:text="prix :"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/nouveaux_temps "
                app:layout_constraintTop_toTopOf="@+id/nouveaux_prix"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/nouveaux_prix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="10dp"
                android:text="xxxxx"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/textView13" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:text=":"
                app:layout_constraintBottom_toBottomOf="@+id/like_image"
                app:layout_constraintEnd_toStartOf="@+id/nouveaux_nombre_de_like"
                app:layout_constraintStart_toEndOf="@+id/like_image"
                app:layout_constraintTop_toTopOf="@+id/like_image" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

